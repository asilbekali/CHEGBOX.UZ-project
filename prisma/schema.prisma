generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
  SELLER
  VIEWER_ADMIN 
}
enum UserStatus {
  active
  noActive
}


// created
model Region {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// created
model User {
  id        Int        @id @default(autoincrement())
  full_name String
  email     String     @unique
  phone     String     @unique
  password  String
  role      Role       @default(USER)
  status    UserStatus @default(noActive)

  regionId Int
  region   Region @relation(fields: [regionId], references: [id])

  products Product[]
  sessions MySession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  image          String
  description    String
  oldPrice       Float
  newPrice       Float
  discountAmount Float
  discountType   String 
  expiryDate     DateTime
  location       String
  categoryId     Int
  category       Category @relation(fields: [categoryId], references: [id])
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model MySession {
  id         Int      @id @default(autoincrement())
  deviceIP   String
  deviceName String
  userId     Int?
  user       User?    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
}
